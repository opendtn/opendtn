#
# Standart OpenSSL configuration file to generate the opendtn.test
# certificates
#

[ req ]

default_bits		= 2048
distinguished_name	= req_distinguished_name
req_extensions		= req_ext

prompt				= no

[ req_distinguished_name ]

countryName			= DE
stateOrProvinceName	= Bavaria
localityName		= Oberpfaffenhofen
organizationName	= DLR e.V.
organizationalUnitName=opendtn
commonName			= opendtn.test
emailAddress		= dlr@opendtn.com

[ req_ext ]

basicConstraints = CA:TRUE
subjectAltName=@alt_names

[ alt_names ]

DNS.1 = opendtn.test
DNS.2 = *.opendtn.test
DNS.3 = localhost
DNS.4 = opendtn
DNS.5 = *.opendtn

IP.1 = 127.0.0.1